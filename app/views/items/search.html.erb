<%= render 'homes/header' %>
<div class="container">
	<div class="row" style="margin-top: 50px; margin-bottom: 70px;">
		<% if @items.present? %>
		<% @items.each do |item| %>
		<div class="col-xs-3">
			<!-- <div class="flex"> -->
				<table class="table-borderless item-search-results-table">
					<tbody>
						<tr>
							<td><%= image_tag item["mediumImageUrls"][0] %></td>
						</tr>
						<tr>
							<td><%= item.name %></td>
						</tr>
						<tr>
							<td class="item-price"><%= number_with_delimiter(item.price) %>円</td>
						</tr>
						<tr>
							<td><%= link_to 'レビューを見る', save_item_path(item["itemCode"]), class:"btn half-review_btn" %>
								<%= link_to '楽天で購入', "#{item.url}", class:"btn half-rakuten_btn" %>
							</td>
						</tr>
					</tbody>
				</table>
			<!-- </div> -->
		</div>
		<% end %>
		<% end %>
	</div>
	<div align="center">
		<ul class="pagination">
			<% unless @page == 1 %>
		    <li class="page-item"><%= link_to "前へ", controller: "items", action: "search", keyword: @keyword, page: @page - 1, genreId: @genre_id %></li>
		    <% end %>
		    <li class="page-item"><a class="page-link" href="#"><%= @page %></a></li>
		    <% if @has_next_page %>
		    <li class="page-item"><%= link_to "次へ", controller: "items", action: "search", keyword: @keyword, page: @page + 1, genreId: @genre_id %></li>
		    <% end %>
		</ul>
	</div>
</div>

<style>
	.search_for_purchase {
		display: block;
	}
</style>