<nav class="navbar devise-header">
  <div class="nav navbar-left">
    <%= link_to 'FitReviews', root_path, class:"FitReviews-logo-header" %>
  </div>
  <div class="nav navbar-right">
    <%= link_to '既にアカウントをお持ちの方',new_user_session_path %>
  </div>
</nav>

<div class="container">
  <div class="row">
    <div class="sign-up-info">
      <div>
        <h1 class="FitReviews-logo-header">FitReviews</h1>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <table class="table-borderless sign-up-table">
            <tbody>
              <tr>
                <td class="sign-up-field"><%= f.text_field :name, autofocus: true, placeholder: "ユーザーネーム", class:"form-control" %></td>
              </tr>
              <tr>
                <td class="sign-up-field"><%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class:"form-control" %></td>
              </tr>
              <tr>
                <td class="sign-up-field"><%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class:"form-control" %>
                  <div align="right">
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> 文字以上)</em>
                    <% end %>
                  </div>
                </td>
              </tr>
              <tr>
                <td class="sign-up-field"><%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認用)", class:"form-control" %></td>
              </tr>
              <tr>
                <td class="sign-up-field">
                    <%= f.submit "新規登録", class:"btn btn-primary submit1"%>
                </td>
              </tr>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>
