<%= render 'homes/header' %>
<div class="container">
	<div class="row" style="margin-top: 50px; margin-bottom: 70px;">
		<% if @items.present? %>
		<% @items.each do |item| %>
		<div class="col-xs-3">
			<!-- <div class="flex"> -->
				<table class="table-borderless">
					<tbody>
						<tr>
							<td><%= image_tag item["mediumImageUrls"][0] %></td>
						</tr>
						<tr>
							<td><%= item.name %></td>
						</tr>
						<tr>
							<td style="color: #777777; text-align: right;">価格: <%= (item.price) %>円</td>
						</tr>
						<tr>
							<td>
								<%= link_to 'この商品のレビューを書く', save_item_path(item["itemCode"]), class:"btn review_btn" %>
							</td>
						</tr>
					</tbody>
				</table>
			<!-- </div> -->
		</div>
		<% end %>
		<% end %>
	</div>
	<div style="text-align: center;">
		<ul class="pagination">
			<% unless @page == 1 %>
		    <li class="page-item"><%= link_to "前へ", controller: "reviews", action: "search", keyword: @keyword, page: @page - 1, genreId: @genre_id %></li>
		    <% end %>
		    <li class="page-item"><a class="page-link" href="#"><%= @page %></a></li>
		    <% if @has_next_page %>
		    <li class="page-item"><%= link_to "次へ", controller: "reviews", action: "search", keyword: @keyword, page: @page + 1, genreId: @genre_id %></li>
		    <% end %>
		</ul>
	</div>
</div>

<style>
	.search_for_review {
		display: block;
	}
    .review_btn {
    	color: white;
    	border-radius: 5px;
    	background-color: #FF773E;;
    	width: 100%;
    }
    .review_btn:hover {
    	color: white;
    	background-color: #FF4F02;
    }
/*    .flex {
    	display: flex;
    }*/
    table {
    	height: 400px;
    	margin: 10px;
    	border-top: 1px solid #CCCCCC;
    }
</style>